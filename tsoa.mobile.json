{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
   "controllerPathGlobs": [
    "src/controllers/mobile/**/*Controller.ts",
    "src/controllers/mobile/**/*.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "outputFileName": "swagger.mobile.json",
    "host": "localhost:3000",
    "basePath": "/v1/mobile",
    "schemes": ["http", "https"],
    "produces": ["application/json"],
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "info": {
      "title": "Mobile API",
      "version": "1.0.0",
      "description": "Mobile API Documentation"
    },
    "yaml": false
  },
  "routes": {
    "routesDir": "build",
    "middleware": "express",
    "authenticationModule": "./src/middleware/auth-helper.ts",
    "routesFileName": "routes.mobile.ts",
    "routesPrefix": "/v1/mobile"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}